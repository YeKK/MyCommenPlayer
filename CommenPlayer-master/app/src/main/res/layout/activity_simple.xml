        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:id="@+id/button1"
            android:text="选呼"
            android:textSize="30dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:id="@+id/button2"
            android:text="群呼"
            android:textSize="30dp"/>
        <Button
            android:layout_width="wrap_content"
